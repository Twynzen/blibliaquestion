# Firebase Configuration
FIREBASE_PROJECT_ID=biblia-question

# Option 1: Path to service account JSON file (for local development)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Option 2: Base64 encoded service account JSON (for production/Render)
# To generate: cat firebase-credentials.json | base64
# FIREBASE_CREDENTIALS_BASE64=eyJ0eXBlIjoi...

# CORS - Comma separated list of allowed origins
CORS_ORIGINS=http://localhost:4200,https://biblia-question.vercel.app

# Environment
ENVIRONMENT=development
DEBUG=true
